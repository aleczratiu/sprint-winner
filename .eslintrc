{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": ["airbnb", "airbnb/hooks"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2019
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/extensions": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-await-in-loop": 1,
        "react/jsx-indent": [2, 4],
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [".jsx",
                ".js"]
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "no-restricted-syntax": [
            2,
            "DebuggerStatement",
            "LabeledStatement",
            "WithStatement"
        ],
        "max-len": [
            2,
            120
        ],
        "no-console": 0,
        "no-bitwise": 0,
        "import/no-cycle": 1,
        "radix": 0,
        "operator-linebreak": [
            "error",
            "after"
        ],
        "newline-before-return": "error"
    },
    "globals": {
        "window": true,
        "import": true
    }
}
